<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logs"
    tools:context=".logsActivity">

    <TextView
        android:id="@+id/logsfordeleted"
        android:layout_width="match_parent"
        android:layout_height="656dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="2dp"
        android:scrollbars="vertical"
        android:textColor="#fff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/buttonforrecover"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="-1dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/round_btn"
        android:text="recover from log"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/idforrecover"
        android:layout_width="59dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="352dp"
        android:layout_marginRight="352dp"
        android:layout_marginBottom="7dp"
        android:ems="10"
        android:textColorHint="#000"
        android:hint="id?"
        android:inputType="textPersonName" />
</RelativeLayout>